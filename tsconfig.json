{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@actions/*": ["./src/app/shared/actions/*.ts"],
      "@api/*": ["./src/app/api/*"],
      "@components/*": ["./src/app/shared/components/*"],
      "@contexts/*": ["./src/app/shared/contexts/*.ts"],
      "@db/*": ["./src/db/*.ts"],
      "@functions/*": ["./src/app/shared/functions/*"],
      "@hooks/*": ["./src/app/shared/hooks/*"],
      "@modals/*": ["./src/app/shared/modals/*"],
      "@types": ["./src/app/shared/types"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
